local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local window = Rayfield:CreateWindow({
    Name = "barzil - Alpha Hax",
    LoadingTitle = "Loading Assets..",
    LoadingSubtitle = "Created By Zale",
    ConfigurationSaving = {
        Enabled = false,
        FileName = "Sirius"
    },
    KeySystem = true,
    KeySettings = {
        Title = "Zale's Key System",
        Subtitle = "Enter Your Key",
        Note = "Rate The Features",
        FileName = "Sirius",
        SaveKey = false,
        Key = "2025"
    }
})

local fanTab = window:CreateTab("Fan")
local badgeSectionFan = fanTab:CreateSection("Badge")

fanTab:CreateButton({
    Name = "Auto Get Fan",
    Callback = function()
        local ReplicatedStorage = game:GetService("ReplicatedStorage")
        local Events = ReplicatedStorage:WaitForChild("RemoteEvents")

        Events.SuitUpClown:FireServer()
        wait(0.1)
        Events.KeyQuest:FireServer()
        wait(0.1)
        Events.KeyAcquired:FireServer()
        wait(0.1)
        Events.GOHOME:FireServer()
        wait(0.1)
        Events.KeyBadgeReward:FireServer()
    end,
    SectionParent = badgeSectionFan
})

local boxerTab = window:CreateTab("Boxer")
local badgeSectionBoxer = boxerTab:CreateSection("Badge")

boxerTab:CreateButton({
    Name = "Instant Get Boxer",
    Callback = function()
        local gloves = workspace:FindFirstChild("BoxingGloves")
        if gloves then
            local clickDetector = gloves:FindFirstChildOfClass("ClickDetector")
            if clickDetector then
                fireclickdetector(clickDetector)
            end
        end
    end,
    SectionParent = badgeSectionBoxer
})

local metaverseTab = window:CreateTab("Metaverse")
local badgeSectionMetaverse = metaverseTab:CreateSection("Badge")

metaverseTab:CreateButton({
    Name = "Teleport To Metaverse Game (Rerun The Loader When Your In The Game)",
    Callback = function()
        local buildings = workspace:FindFirstChild("Buildings")
        if buildings then
            local tower = buildings:FindFirstChild("wizard twoer 2")
            if tower then
                local model = tower:FindFirstChild("Model")
                if model then
                    local trigger = model:FindFirstChild("Trigger")
                    if trigger and trigger:IsA("BasePart") then
                        local transmitter = trigger:FindFirstChildOfClass("TouchTransmitter")
                        if transmitter then
                            local character = game.Players.LocalPlayer.Character or game.Players.LocalPlayer.CharacterAdded:Wait()
                            local hrp = character:WaitForChild("HumanoidRootPart")
                            firetouchinterest(hrp, trigger, 0)
                            firetouchinterest(hrp, trigger, 1)
                        end
                    end
                end
            end
        end
    end,
    SectionParent = badgeSectionMetaverse
})
