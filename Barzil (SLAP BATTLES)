local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local window = Rayfield:CreateWindow({
    Name = "barzil - Alpha Hax",
    LoadingTitle = "Loading Assets..",
    LoadingSubtitle = "Created By Zale",
    ConfigurationSaving = {
        Enabled = false,
        FileName = "Sirius"
    },
    KeySystem = true,
    KeySettings = {
        Title = "Zale's Key System",
        Subtitle = "Enter Your Key",
        Note = "Rate The Features",
        FileName = "Sirius",
        SaveKey = false,
        Key = "2025"
    }
})

local fanTab = window:CreateTab("Fan")

local badgeSection = fanTab:CreateSection("Badge")

local autoGetFanButton = fanTab:CreateButton({
    Name = "Auto Get Fan",
    Callback = function()
        local keyPart = workspace:FindFirstChild("QuestStuff")
        if keyPart then
            local mesh = keyPart:FindFirstChild("Key")
            if mesh and mesh:IsA("MeshPart") then
                local player = game.Players.LocalPlayer
                local character = player.Character or player.CharacterAdded:Wait()
                local hrp = character:FindFirstChild("HumanoidRootPart")
                if hrp then
                    hrp.CFrame = mesh.CFrame + Vector3.new(0, 3, 0)
                end

                task.wait(0.5)

                local remoteEvents = game:GetService("ReplicatedStorage"):WaitForChild("RemoteEvents")
                local suitUp = remoteEvents:FindFirstChild("SuitUpClown")
                if suitUp then
                    suitUp:FireServer()
                end

                task.wait(0.5)

                local badgeReward = remoteEvents:FindFirstChild("KeyBadgeReward")
                if badgeReward then
                    badgeReward:FireServer()
                end
            end
        end
    end,
    SectionParent = badgeSection
})
